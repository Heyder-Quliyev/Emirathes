@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordViewModel

<!-- register area start -->
<div class="container">
    <div class="form-container">
        <h2>Reset Password</h2>
        <p>Please enter your new password below.</p>
        <form asp-action="ResetPassword">
            <div class="form-group text-left">
                <label asp-for="Email">Email Address</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email address" required>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="Password">New Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your new password" required>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm your new password" required>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-danger">Reset Password</button>
        </form>
        <a href="login.html" class="back-link">Back to Login</a>
    </div>
</div><!-- register area end -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.toggle-password').forEach(function (element) {
                element.addEventListener('click', function () {
                    var passwordInputId = this.parentElement.previousElementSibling.querySelector('input').id;
                    var passwordInput = document.getElementById(passwordInputId);
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        this.textContent = 'Hide';
                    } else {
                        passwordInput.type = 'password';
                        this.textContent = 'Show';
                    }
                });
            });
        });

    </script>
    <script>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    </script>
}