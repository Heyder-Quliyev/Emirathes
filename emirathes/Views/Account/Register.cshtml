@model RegisterVM


<div class="container" style="box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); width:1080px height:400px">
    <div class="row">
        <div class="col-md-6 offset-md-3 registration-form">
            <h2 class="form-title mt-3" style="font-family: Lucida Grande">Join Emirates Skywards</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="form-row">
                    <div class="form-group" style="width:1080px">
                        <label for="name"> Username:</label>
                        <input asp-for="Username" type="text" class="form-control" required>
                        <span style="color:red" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                    <span style="color:red" asp-validation-for="Email"></span>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="password">Password:</label>
                        <input asp-for="Password" type="password" class="form-control" required>
                        <span style="color:red" asp-validation-for="Password"></span>

                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmPassword">Confirm Password:</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                        <span style="color:red" asp-validation-for="ConfirmPassword"></span>

                    </div>
                </div>

                <div class="col-md-6">
                    <label>
                        Remember Me
                    </label>
                    <input asp-for="IsRemember" type="checkbox" class="form-check" />
                </div>
                <div class="form-group">
                    <p>Already have an account? <a asp-controller="Account" asp-action="Login">Log In</a></p>
                </div>
                <div class="form-group btn btn-block">
                    <button style="width: 360.4px" type="submit" class="btn btn-success">Register</button>
                </div>
            </form>
        </div>

        <div class="col-md-4 offset-md-4 social-auth-links text-center mb-3">
           <a asp-action="FacebookLogin" class="btn btn-block btn-primary">
               <i class="la la-facebook mr-2"></i> Sign in using Facebook
           </a>

            <a asp-action="GoogleLogin" class="btn btn-block btn-danger">
                <i class="la la-google mr-2"></i> Sign in using Google
            </a>
        </div>


    </div>
</div>