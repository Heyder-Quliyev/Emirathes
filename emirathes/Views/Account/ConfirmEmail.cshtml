﻿@{
    ViewData["Title"] = "Confirm Email";
}


<div style="background-color: #333333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;">

    <div class="card confirmation-card" style="background: #fff;
            border: none;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <div class="card-body">
            <h5 class="card-title" style="font-size: 1.75rem;
            color: #333;
            margin-bottom: 1rem;">
                Email Confirmed
            </h5>
            <p class="card-text" style="font-size: 1rem;
            color: #666;
            margin-bottom: 1.5rem;">
                Thank you for confirming your email! Your email address has been successfully verified.
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="background: red;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-size: 1rem;
            transition: background-color 0.3s ease;">Go to Homepage</a>
        </div>
    </div>
</div>
