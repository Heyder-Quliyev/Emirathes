@model Products

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
            </div>
        </div>
        <!-- end page title -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">

                        <form class="row" method="post" asp-area="admin" asp-controller="products" asp-action="create" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="col-md-4">
                                <label>
                                    Title
                                </label>
                                <input asp-for="Title" type="text" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                           
                            <div class="col-md-4">
                                <label>
                                    Baggage
                                </label>
                                <input asp-for="Baggage" type="text" class="form-control" />
                                <span asp-validation-for="Baggage" class="text-danger"></span>
                            </div>


                            <div class="col-md-4">
                                <label>
                                    Cabin Baggage
                                </label>
                                <input asp-for="CabinBaggage" type="text" class="form-control" />
                                <span asp-validation-for="CabinBaggage" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-3">
                                <label>
                                    Category
                                </label>
                                <br />
                                <select class="form-select" asp-for="CategoryId" style="width:200px; height:38px">
                                    @foreach (var item in ViewBag.Category)
                                    {
                                        <option value="@item.Id">@item.TicketsClassName</option>

                                    }    
                                </select>
                            </div>

                         

                            <div class="col-md-3">
                                <button type="submit" class="btn btn-success mt-3 btn-block">Add database</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div><!-- End Page-cont