@model Tickts


<div class="row">
    <div class="col-lg-12">
        <div class="form-box">
            <div class="form-title-wrap">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h3 class="title">Create Fly Tickts</h3>
                    </div>

                </div>
            </div>
            <div class="form-content">
                <div class="table-form table-responsive">


                    <form class="row" style="width: 1000px;" method="post" asp-area="Admin" asp-controller="Slider" asp-action="Edit" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()
                        <div class="col-md-4">
                            <label>
                                Destination
                            </label>
                            <input asp-for="Id" type="hidden" class="form-control" />
                            <input asp-for="Destiantion" type="text" class="form-control" />
                            <span asp-validation-for="Destiantion" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label>
                                Direction
                            </label>
                               <select asp-for="Way" type="text" class="form-select" style="width:304px; height:38px">
                                <option value="One Way">One Way</option>
                                <option value="Round-Trip">Round-Trip</option>
                            </select>

                            @* <input asp-for="Way" type="text" class="form-control" /> *@
                            <span asp-validation-for="Way" class="text-danger"></span>

                        </div>

                        <div class="col-md-4">
                            <label>
                                Class
                            </label>
                            @* <input asp-for="Classes" type="text" class="form-control" /> *@

                           

                            <select asp-for="Classes" type="text" class="form-select" style="width:304px; height:38px">
                                <option value="Economy Class">Economy Class</option>
                                <option value="Business Class">Business Class</option>
                                <option value="First Class">First Class</option>
                            </select>

                            <span asp-validation-for="Classes" class="text-danger"></span>


                        </div>



                        <div class="col-md-4">
                            <label>
                                Stops
                            </label>

                            <select asp-for="Stop" type="text" class="form-select" style="width:304px; height:38px">
                                <option value="Non Stop"> Non Stop</option>
                                <option value="1 Stop">1 Stop</option>
                                <option value="2 Stop">2 Stop</option>
                                <option value="3 Stop">3 Stop</option>
                            </select>

                            @* <input asp-for="Way" type="text" class="form-control" /> *@
                            <span asp-validation-for="Stop" class="text-danger"></span>

                        </div>


                        <div class="col-md-4">
                            <label>
                                Flight Number
                            </label>
                            <input asp-for="FlightNumber" type="text" class="form-control" />
                            <span asp-validation-for="FlightNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label>
                                Price
                            </label>
                            <input asp-for="Price" type="text" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>

                        </div>

                        <div class="col-md-4">
                            <label>
                                Take Off Time
                            </label>
                            <input asp-for="Date" type="text" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>

                        </div>

                        <div class="col-md-4">
                            <label>
                                Landing Time
                            </label>
                            <input asp-for="LandigTime" type="text" class="form-control" />
                            <span asp-validation-for="LandigTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label>
                                Total Flight Time
                            </label>
                            <input asp-for="Time" type="text" class="form-control" />
                            <span asp-validation-for="Time" class="text-danger"></span>

                        </div>


                        <div class="col-md-4">
                            <label>
                                Images
                            </label>
                            <input asp-for="File" type="file" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label>
                                Reviewed
                            </label>
                            <input asp-for="IsAvailable" type="checkbox" class="form-check" />
                        </div>


                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success mt-3 btn-block">Edit</button>
                        </div>


                    </form>
                </div>
            </div>
        </div><!-- end form-box -->
    </div><!-- end col-lg-12 -->
</div><!-- end row -->